# Rate limiter configuration
# MODE: one of "ip", "token", "both". If "both", token limits (when present) override IP limits.
MODE=both

# Default limit per identifier (when no token-specific config exists)
DEFAULT_LIMIT=10
# Window in seconds for counting requests (default 1 second)
DEFAULT_WINDOW=1
# Block duration in seconds after exceeding the limit (default 300 seconds / 5 minutes)
DEFAULT_BLOCK=300

# Token-specific limits, comma separated entries with format:
# TOKEN_LIMITS=<TOKEN>:<LIMIT>:<WINDOW_SECONDS>:<BLOCK_SECONDS>,<TOKEN2>:...
# Example: TOKEN_LIMITS=abc123:100:1:300,def456:50:1:60
TOKEN_LIMITS=

# Redis connection
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Server
SERVER_ADDR=0.0.0.0:8080
